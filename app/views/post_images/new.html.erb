<div id="app">
    <h1>{{ message }}</h1>
</div>

<%= form_with model: @post_image, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>ショップ名</h4>
  <%= f.text_field :shop_name %>
  <h4>説明</h4>
  <%= f.text_area :caption %>
  <%= f.submit '投稿' %>
<% end %>

<script>
    new Vue({
        el: '#app',
        data: {
            message: '画像投稿フォーム'
        }
    })
</script>